<div
  data-f="product-template-yummies.liquid"
  class="wrapper"
  itemscope
  itemtype="http://schema.org/Product"
  id="ProductSection--{{ section.id }}"
  data-section-id="{{ section.id }}"
  data-section-type="product-template"
  data-image-zoom-type="{{ section.settings.zoom_enable }}"
  data-enable-history-state="false"
  data-scroll-to-image="{% if section.settings.image_layout == "stacked" %}true{% else %}false{% endif %}"
>
  <meta itemprop="url" content="{{ shop.url }}{{ product.url }}">
  <meta itemprop="image" content="{{ product.featured_image.src | img_url: 'grande' }}">

  {% assign current_variant = product.selected_or_first_available_variant %}
  {% assign featured_image = current_variant.featured_image | default: product.featured_image %}

  <div class="grid product-single">
    <div class="grid__item product-title-wrapper medium-down--text-center">
      {% if section.settings.product_vendor_enable %}
        <h2 class="product-single__vendor" itemprop="brand">{{ product.vendor }}</h2>
      {% endif %}
      <h1 class="product-single__title hhh" itemprop="name">{{ product.title }}</h1>
      {% for block in section.blocks %}
        {% case block.type %}
            {% when 'reviews' %}
              <div class="star-review" id="star-id-yummies">
                <img
                  src="https://cdn.shopify.com/s/files/1/0091/8444/4495/files/star-pic.png?v=1712962883"
                  height=""
                  width=""
                  alt=""
                >
                <span class="review-count">{{ block.settings['reviews-text'] }}</span>
              </div>
        {% endcase %}
      {% endfor %}
      <span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span>
    </div>

    <div class="grid__item medium--one-half large--one-half text-center product-images-wrapper">
      {% include 'product-images-2', featured_review:section.settings.featured_review, review_text:section.settings.review_text, review_author: section.settings.review_author, review_stars:section.settings.review_stars %}
       {% include 'product-images', featured_review: section.settings.featured_review, featured_review_title: section.settings.featured_review_author, featured_review_text: section.settings.featured_review_text %}
    </div>

    <div class="grid__item product-single__meta--wrapper medium--one-half large--one-half">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'description' %}
            <div class="product-description original-description">{{ product.description }}</div>
            {% comment %}
            {% if product.metafields.custom.sugar_free_description !=blank %}<p class="product-description free-description">{{ product.metafields.custom.sugar_free_description }}</p>{% endif %}
            {% endcomment %}
          
          
        {% endcase %}
      {% endfor %}

      {% include 'product-offers-yummies' %}
      
      <div class="product-single__meta">
        <!-- Accordion Begins -->
        <div class="product-page-accordion">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'accordion' %}
                <details class="accordion-cls" {% if block.settings.open == true %}open{% endif %}>
                  <summary>{{ block.settings['accordion-heading'] }}</summary>
                  <div class="accordion-contents">
                    {{ block.settings['accordion-content'] }}
                  </div>
                </details>
              {% when 'accordion-ingredients' %}
                <details class="accordion-cls accordion-ingredients" {% if block.settings.open == true %}open{% endif %}>
                  <summary>{{ block.settings['accordion-heading'] }}</summary>
                  <div class="accordion-contents">
                    {{ block.settings['accordion-content'] }}
                  </div>
                </details>   
              {% when 'accordion-description' %}
                <details class="accordion-cls accordion-description" {% if block.settings.open == true %}open{% endif %}>
                  <summary>{{ block.settings['accordion-heading'] }}</summary>
                  <div class="accordion-contents">
                    {{ block.settings['accordion-content'] }}
                  </div>
                </details>   
              {% when 'accordion-ingredients-sf' %}
                <details style="display: none;" class="accordion-cls accordion-ingredients-sf" {% if block.settings.open == true %}open{% endif %}>
                  <summary>{{ block.settings['accordion-heading'] }}</summary>
                  <div class="accordion-contents">
                    {{ block.settings['accordion-content'] }}
                  </div>
                </details> 
              {% when 'accordion-description-sf' %}
                <details style="display: none;" class="accordion-cls accordion-description-sf" {% if block.settings.open == true %}open{% endif %}>
                  <summary>{{ block.settings['accordion-heading'] }}</summary>
                  <div class="accordion-contents">
                    {{ block.settings['accordion-content'] }}
                  </div>
                </details>  
              {% when 'video-carousel' %}
                {% include 'video-carousel-snippet', video: section.settings.video-1, video_2: section.settings.video-2, video_3: section.settings.video-3, video_4: section.settings.video-4 %}
            {% endcase %}
          {% endfor %}
        </div>

        <!-- Accordion Ends -->


        <!-- Product Offers were originally here -->

        {% if section.settings.social_sharing_products %}
          {% include 'social-sharing', share_title: product.title, share_permalink: product.url, share_image: product %}
        {% endif %}
      </div>
    </div>
  </div>
</div>

<script src="{{ 'product-customization-yummies.js' | asset_url }}" defer="defer"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {

      var videoThumbnails = document.querySelectorAll('.miniature__video_play');
      var popups = document.querySelectorAll('.Popup_video__product');
      var closeButtons = document.querySelectorAll('.video-popup-close');

      function openVideoPopup(event) {
          event.preventDefault();
          var popup = this.nextElementSibling;
          popup.style.display = 'flex';
          var video = popup.querySelector('video');
          video.play();
      }

      function closeVideoPopup(event) {
          var popup = this.parentElement;
          popup.style.display = 'none';
          var video = popup.querySelector('video');
          video.pause();
          video.currentTime = 0;
      }

      videoThumbnails.forEach(function(thumbnail) {
          var videoElement = thumbnail.nextElementSibling.querySelector('video');
          var poster = videoElement.getAttribute('poster');
          if (poster) {
              thumbnail.style.backgroundImage = 'url(' + poster + ')';
          }
          thumbnail.addEventListener('click', openVideoPopup);
      });

      closeButtons.forEach(function(button) {
          button.addEventListener('click', closeVideoPopup);
      });

      popups.forEach(function(popup) {
          popup.addEventListener('click', function(event) {
              if (event.target === popup) {
                  popup.style.display = 'none';
                  var video = popup.querySelector('video');
                  video.pause();
                  video.currentTime = 0;
              }
          });
      });
  });
</script>
