<div class="additional-products wrapper aos-init aos-animate" data-aos="fade-up">
  <h2>{{ section.settings.heading }}</h2>

  <div class="products-wrapper swiper-container-mobile">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          <a class="product-item" href="{{ block.settings.product }}">
            {% if block.settings.image != blank %}
              <div class="product-item-img">
                <img src="{{ block.settings.image | image_url }}">
              </div>
            {% endif %}
            {% if block.settings.heading != blank %}
              <h3>{{ block.settings.heading }}</h3>
            {% endif %}
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Additional Products",
    "settings": [
      {
        "type": "html",
        "id": "heading",
        "label": "Heading"
      }
    ],
    "blocks": [
      {
        "type": "product",
        "name": "Product",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "image"
          },
          {
            "type": "url",
            "id": "product",
            "label": "Product"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Additional Products"
      }
    ]
  }
{% endschema %}

{% style %}
  .additional-products {
    padding-top: 40px;
    padding-bottom: 40px;
  }

  .additional-products h2 {
    text-align: center;
    font-family: 'just lovely';
    font-size: 90px;
  }

  .additional-products .products-wrapper {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    justify-content: center;
    align-items: center;
    gap: 20px;
  }

  .additional-products h3 {
    margin-top: 20px;
  }

  .additional-products .color-pink {
    color: #fac8ca;
  }

  .products-wrapper .product-item {
    max-width: 450px;
    width: 100%;
  }

  .products-wrapper .product-item h3 {
    text-align: center;
    font-size: 18px;
    text-decoration: none;
  }

  .products-wrapper .product-item-img {
    max-width: 450px;
    width: 100%;
    position: relative;
    display: flex;
    aspect-ratio: 1;
  }

  .products-wrapper .product-item-img img {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    object-fit: cover;
  }

  @media screen and (min-width: 600px){
    .additional-products .products-wrapper .swiper-wrapper{
      gap: 20px;
    }
  }

  @media screen and (max-width: 600px) {
    .additional-products .products-wrapper {
      display: block;
    }

    .swiper-container-mobile {
      overflow: hidden;
    }

    .swiper-wrapper {
      display: flex;
    }

    .swiper-slide {
      flex-shrink: 0;
      width: auto;
    }
  }

  @media screen and (max-width: 768px) {
    .additional-products h2 {
      font-size: 50px;
      line-height: 1;
    }
  }
{% endstyle %}

<script>
  document.addEventListener('DOMContentLoaded', function () {
    let swiperInstance = null;

    function initOrDestroySwiper() {
      const screenWidth = window.innerWidth;

      if (screenWidth <= 600 && !swiperInstance) {
        swiperInstance = new Swiper('.swiper-container-mobile', {
          slidesPerView: 2.2, // muestra 2 completos y parte del 3ro
          spaceBetween: 20,
        });
      } else if (screenWidth > 600 && swiperInstance) {
        swiperInstance.destroy(true, true);
        swiperInstance = null;
      }
    }

    initOrDestroySwiper();
    window.addEventListener('resize', initOrDestroySwiper);
  });
</script>
