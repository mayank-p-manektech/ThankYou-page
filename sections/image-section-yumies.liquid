        },
        {
            "type": "text",
            "id": "bottom_text",
            "label": "Bottom Text"
        },
        {
            "type": "color",
            "id": "bottom_text_color",
            "label": "Bottom Text Color",
            "default": "#000000"
        },
        {
            "type": "text",
            "id": "button_text",
            "label": "Button Text"
        },      
        {
            "type": "url",
