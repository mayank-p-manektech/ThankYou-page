{% style %}
    .full-width__overlay-{{ section.id }} .full-width__top-text {
        color: {{ section.settings.top_text_color }};
    }
    .full-width__overlay-{{ section.id }} h3.full-width__title {
        color: {{ section.settings.title_color }};
    }
    .full-width__overlay-{{ section.id }} .full-width__title .js-rotating {
        color: {{ section.settings.title_color }};
    }
    .full-width__overlay-{{ section.id }} .full-width__bottom-text {
        color: {{ section.settings.bottom_text_color }};
    }
    .full-width__overlay-{{ section.id }} .full-width__btn {
        color: {{ section.settings.button_text_color }};
        background-color: {{ section.settings.button_bg_color }};
        border-color: {{ section.settings.button_border_color }};
    }
{% endstyle %}
<div data-f="image-section-yumies.liquid" class="full-width__wrapper {% if section.settings.image_height == 'full' %}full-width__full-height{% endif %} full-width__wrapper-{{ section.id }} {{ section.settings.section_class }}" data-aos="fade-up" data-section-id="{{ section.id }}" data-section-type="full-width-overlay-section" data-aos="fade-up">
    {% if section.settings.image != blank %}
        {% assign img_url = section.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
        <img class="full-width__image {% if section.settings.image_mobile != blank %}full-width__image-desktop{% endif %} lazyload fade-in"
        src="{{ section.settings.image | img_url: '300x' }}"
        data-src="{{ img_url }}"
        data-widths="[540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048, 4472]"
        data-aspectratio="{{ section.settings.image.aspect_ratio }}"
        data-sizes="auto"
        data-parent-fit="cover"
        data-hero-image
        alt="{{ section.settings.image.alt | escape }}"
        style="object-position: {{ section.settings.image_position }}">
    {% else %}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}

    {% if section.settings.image_mobile != blank %}
        {% assign img_url = section.settings.image_mobile | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
        <img class="full-width__image full-width__image-mobile lazyload fade-in"
        src="{{ section.settings.image_mobile | img_url: '300x' }}"
        data-src="{{ img_url }}"
        data-widths="[540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048, 4472]"
        data-aspectratio="{{ section.settings.image_mobile.aspect_ratio }}"
        data-sizes="auto"
        data-parent-fit="cover"
        data-hero-image
        alt="{{ section.settings.image_mobile.alt | escape }}">
    {% endif %}
    <div class="full-width__overlay full-width__overlay-{{ section.id }}">
        <div class="wrapper full-width__align-wrapper position-{{ section.settings.layout }}">
            <div class="full-width__text-wrapper {% if section.settings.slide_rotating_text != blank %}has-rotating-text{% endif %}">
                <div class="full-width__top-text">
                    {{ section.settings.top_text }}
                </div>
                <h3 class="full-width__title {% if section.settings.slide_rotating_text != blank %}has-rotating-text{% endif %}">
                    {{ section.settings.title }}                   
                    {% if section.settings.slide_rotating_text != blank %}
                        <span class="rotating-wrapper">
                            <div class="js-rotating">{{ section.settings.slide_rotating_text | escape }}</div>
                        </span> 
                    {% endif %}
                </h3>
                <div class="full-width__bottom-text">
                    {{ section.settings.bottom_text }}
                </div>
                {% if section.settings.button_text != blank and section.settings.button_link != blank %}
                    <a href="{{ section.settings.button_link }}" class="full-width__btn btn">
                        {{ section.settings.button_text | escape }}
                    </a>
                {% endif %}
               <div class="banner-bottom-image hidden-xs">
          		{% if section.settings.bsmall-image != blank %}
            	<img class="banner_foot_image" src="{{ section.settings.bsmall-image | img_url: 'master' }}" alt="{{ section.settings.bsmall-image.alt }}">
            	{% endif %}
        		</div>   
            </div>
        </div>
    </div>
</div>
