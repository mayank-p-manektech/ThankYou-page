            "label": "Image alignment",
            "default": "left",
            "options": [
                {
                "value": "left",
                "label": "Left"
                },
                {
                    "value": "right",
                    "label": "Right"
                }
            ]
        },
        {
            "type": "text",
            "id": "section_class",
            "label": "Class"
        }
    ],
    "presets": [
        {
            "name": "Full Width Image",
            "category": "Image"
        }
    ]
}
{% endschema %}