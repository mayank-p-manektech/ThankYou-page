{% unless product.has_only_default_variant %}
    {% for option in product.options_with_values %}
        <div class="radio-wrapper js product-form__item small--text-center option-name-{{ option.name | escape | handleize }}">
            {% assign option_name = option.name | escape %}
            {% if option_name contains 'Choose Servings' %}
                {% include 'product-opt-choose-servings-2' %}
            {% elsif option_name contains 'Choose Quantity' %}
                {% include 'product-opt-choose-qty' %}
            {% else %}
                {% include 'product-opt-default' %}
            {% endif %}
        </div>
    {% endfor %}
{% endunless %}


<script>
  document.addEventListener("DOMContentLoaded", function() {
    // Display 32 Servings 8oz option as default
    const label = document.querySelector('.option-name-choose-servings label[data-option="64 servings | 16oz"]');
    if (label) {
      label.click();
    }

    // — al terminar, mostramos las ofertas —
    const offers = document.querySelector('#rose-nectar .product-offers');
    if (offers) {
      offers.style.opacity = '1';
    }
  });

</script>
