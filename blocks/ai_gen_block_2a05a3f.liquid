{% doc %}
  @prompt
    generate a circular like collection style where i can add products in each circles that would display them and when clicked would lead to each products
{% enddoc %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-circular-collection-{{ ai_gen_id }} {
    padding: 40px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-circular-collection__heading-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-circular-collection__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 30px;
    max-width: 1200px;
    margin: 0 auto;
    justify-items: center;
  }

  .ai-circular-collection__item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    transition: transform 0.3s ease;
  }

  .ai-circular-collection__item-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
  }

  .ai-circular-collection__circle-{{ ai_gen_id }} {
    width: {{ block.settings.circle_size }}px;
    height: {{ block.settings.circle_size }}px;
    border-radius: 50%;
    overflow: hidden;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    transition: box-shadow 0.3s ease, border-color 0.3s ease;
    position: relative;
    background-color: #f4f4f4;
  }

  .ai-circular-collection__item-{{ ai_gen_id }}:hover .ai-circular-collection__circle-{{ ai_gen_id }} {
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    border-color: {{ block.settings.border_hover_color }};
  }

  .ai-circular-collection__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-circular-collection__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-circular-collection__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-circular-collection__title-{{ ai_gen_id }} {
    margin-top: 15px;
    color: {{ block.settings.product_title_color }};
    font-size: {{ block.settings.product_title_size }}px;
    text-align: center;
    max-width: {{ block.settings.circle_size }}px;
  }

  .ai-circular-collection__price-{{ ai_gen_id }} {
    margin-top: 5px;
    color: {{ block.settings.price_color }};
    font-size: {{ block.settings.price_size }}px;
    font-weight: 600;
  }

  @media screen and (max-width: 749px) {
    .ai-circular-collection__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
      gap: 20px;
    }

    .ai-circular-collection__circle-{{ ai_gen_id }} {
      width: calc({{ block.settings.circle_size }}px * 0.8);
      height: calc({{ block.settings.circle_size }}px * 0.8);
    }

    .ai-circular-collection__title-{{ ai_gen_id }} {
      max-width: calc({{ block.settings.circle_size }}px * 0.8);
    }
  }
{% endstyle %}

<div class="ai-circular-collection-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h2 class="ai-circular-collection__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
  {% endif %}

  <div class="ai-circular-collection__grid-{{ ai_gen_id }}">
    {% for i in (1..8) %}
      {% liquid
        assign product_key = 'product_' | append: i
        assign product = block.settings[product_key]
      %}

      {% if product != blank %}
        <a href="{{ product.url }}" class="ai-circular-collection__item-{{ ai_gen_id }}">
          <div class="ai-circular-collection__circle-{{ ai_gen_id }}">
            {% if product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 400 }}"
                alt="{{ product.featured_image.alt | escape }}"
                class="ai-circular-collection__image-{{ ai_gen_id }}"
                loading="lazy"
                width="400"
                height="400"
              >
            {% else %}
              <div class="ai-circular-collection__placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
          {% if block.settings.show_product_title %}
            <div class="ai-circular-collection__title-{{ ai_gen_id }}">{{ product.title }}</div>
          {% endif %}
          {% if block.settings.show_price %}
            <div class="ai-circular-collection__price-{{ ai_gen_id }}">{{ product.price | money }}</div>
          {% endif %}
        </a>
      {% endif %}
    {% endfor %}
  </div>
</div>

